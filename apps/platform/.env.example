# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# These redirect URIs must match what's configured in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
GOOGLE_REDIRECT_URI_USER=http://localhost:3000/api/user-auth/callback/google
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# The JWT secret is used to sign custom JWT tokens for Supabase
SUPABASE_JWT_SECRET=your-jwt-secret-here

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_DEBUG=false
NEXTAUTH_LOG_LEVEL=silent
AUTH_TRUST_HOST=true
DISABLE_AUTH_LOGS=true

# Gmail API credentials
GMAIL_CLIENT_ID=your-gmail-client-id-here
GMAIL_CLIENT_SECRET=your-gmail-client-secret-here
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token-here
GMAIL_USER_EMAIL=your-email@example.com

# Email Configuration
MOCK_EMAIL=false

# Other environment variables
NEXT_PUBLIC_BASE_URL=http://localhost:3000,https://www.yourdomain.com,https://yourdomain.com

MIDDLEWARE_DEBUG=false
BLOG_DEBUG=false
SUPABASE_DEBUG=false

# RazorPay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id-here
RAZORPAY_KEY_SECRET=your-razorpay-key-secret-here
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id-here
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret-here