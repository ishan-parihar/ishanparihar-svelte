# Set default behavior to automatically normalize line endings
* text=auto

# Force the eol for specific file types to be LF
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.env text eol=lf

# Deny binary files from being normalized
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.class binary
*.jar binary
*.war binary
*.ear binary
*.bin binary
*.dat binary

# Specify encoding for specific file types
*.js utf-8
*.ts utf-8
*.tsx utf-8
*.jsx utf-8
*.css utf-8
*.html utf-8
*.svg utf-8