# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# Generate a secret key using: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
# Full URL of your deployed site (e.g., https://yourdomain.com)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# GOOGLE OAUTH (OPTIONAL)
# =============================================================================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/login/google/callback

# =============================================================================
# RAZORPAY PAYMENT INTEGRATION
# =============================================================================
# Get these from your RazorPay Dashboard (https://dashboard.razorpay.com)
# Test Mode Keys (for development)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_key_secret_here
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id_here

# Webhook Secret for signature verification
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# PRODUCTION RAZORPAY KEYS (LIVE MODE)
# =============================================================================
# Uncomment and use these for production deployment
# RAZORPAY_KEY_ID=rzp_live_your_live_key_id_here
# RAZORPAY_KEY_SECRET=your_live_key_secret_here
# NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_your_live_key_id_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local
# 2. Fill in your actual values
# 3. Never commit .env.local to version control
# 4. For RazorPay setup:
#    - Create account at https://razorpay.com
#    - Go to Settings > API Keys
#    - Generate Test/Live mode keys
#    - Set up webhooks in Dashboard > Settings > Webhooks
